		<li>
			<span>
			{{#linkTo (to-lower item.name)}}
				{{item.name}}
			{{/linkTo}}
			</span>:
			<span>
				{{format-currency item.amt}}
			</span>
		</li>
	{{/each}}
</ul>
</div>
